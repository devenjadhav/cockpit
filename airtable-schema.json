{
  "base": {
    "name": "Daydream Portal Events",
    "description": "Event management for hackathon organizers"
  },
  "tables": [
    {
      "name": "Events",
      "description": "Main events table for organizers",
      "fields": [
        {
          "name": "Name",
          "type": "singleLineText",
          "required": true,
          "description": "Event name/title"
        },
        {
          "name": "Description", 
          "type": "multilineText",
          "required": false,
          "description": "Detailed event description"
        },
        {
          "name": "Email",
          "type": "email",
          "required": true,
          "description": "Organizer email address - CRITICAL for authentication"
        },
        {
          "name": "Start Date",
          "type": "date",
          "required": true,
          "options": {
            "dateFormat": "US",
            "includeTime": true
          }
        },
        {
          "name": "End Date", 
          "type": "date",
          "required": true,
          "options": {
            "dateFormat": "US",
            "includeTime": true
          }
        },
        {
          "name": "Location",
          "type": "singleLineText",
          "required": false,
          "description": "Event location (include country for flag detection)"
        },
        {
          "name": "Max Attendees",
          "type": "number",
          "required": false,
          "options": {
            "precision": 0
          }
        },
        {
          "name": "Registration Deadline",
          "type": "date", 
          "required": false,
          "options": {
            "dateFormat": "US",
            "includeTime": true
          }
        },
        {
          "name": "Status",
          "type": "singleSelect",
          "required": true,
          "options": {
            "choices": [
              {"name": "draft", "color": "gray"},
              {"name": "published", "color": "green"},
              {"name": "cancelled", "color": "red"},
              {"name": "completed", "color": "blue"}
            ]
          }
        },
        {
          "name": "Event Format",
          "type": "singleLineText",
          "required": false,
          "description": "Event format duration (e.g., '24-hours', '48-hours', '1-day')"
        },
        {
          "name": "Tags",
          "type": "singleLineText",
          "required": false,
          "description": "Comma-separated tags"
        },
        {
          "name": "Website",
          "type": "url",
          "required": false
        },
        {
          "name": "Contact Info",
          "type": "singleLineText", 
          "required": false
        },
        {
          "name": "Created At",
          "type": "createdTime",
          "required": true
        },
        {
          "name": "Updated At",
          "type": "lastModifiedTime",
          "required": true
        }
      ],
      "sampleData": [
        {
          "Name": "AI Hackathon 2024",
          "Description": "48-hour hackathon focused on AI and machine learning solutions",
          "Email": "organizer@example.com",
          "Start Date": "2024-02-15T09:00:00.000Z",
          "End Date": "2024-02-17T18:00:00.000Z", 
          "Location": "San Francisco, CA, USA",
